<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="1" author="vlad">
        <createTable tableName="student">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <insert tableName="student">
            <column name="name" value="Alice"/>
        </insert>
        <insert tableName="student">
            <column name="name" value="Bob"/>
        </insert>
        <insert tableName="student">
            <column name="name" value="Charlie"/>
        </insert>


        <createTable tableName="course">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <insert tableName="course">
            <column name="name" value="Math"/>
        </insert>
        <insert tableName="course">
            <column name="name" value="Biology"/>
        </insert>
    </changeSet>
    
    <changeSet id="2" author="vlad">
        <createTable tableName="student_enrolled_in_course">
            <column name="student_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="course_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="student_enrolled_in_course"
                                 baseColumnNames="student_id"
                                 constraintName="fk_student_id"
                                 referencedTableName="student"
                                 referencedColumnNames="id"/>
        <addUniqueConstraint tableName="student_enrolled_in_course" columnNames="student_id, course_id"/>
        <createIndex tableName="student_enrolled_in_course" indexName="idx_course_id">
            <column name="course_id"></column>
        </createIndex>

        <insert tableName="student_enrolled_in_course">
            <column name="student_id" value="1"></column>
            <column name="course_id" value="1"></column>
        </insert>
    </changeSet>
</databaseChangeLog>